#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
  char *buffer;
  size_t len = 32;
  size_t characters;

  printf("Enter Input: ");
  characters = getline(&buffer, &len, stdin);
  printf("%zu characters were entered\n", characters);
  printf("You typed: '%s'", buffer);

  char *ptr;
  while ((ptr = strtok_r(buffer, " ", &buffer))) {
    printf("\n%s\n", ptr);
  }

  return 0;
}
